@model Pie


<h3 class="my-5">
    @Model.Name
</h3>

<section class="row gx-5">
    <img alt="@Model.Name" src="@Model.ImageUrl" class="img-fluid col-5" />
    <section class="col-7">
        <h4>@Model.ShortDescription</h4>
        <p>@Model.LongDescription</p>
        <h3 class="pull-right">@Model.Price.ToString("#,0.00 $")</h3>
        <section class="addToCart">
            <a class="btn btn-secondary"
               asp-controller="ShopingCart"
               asp-action="AddToShopingCart"
               asp-route-pieId="@Model.PieId">
                Add to Cart
            </a>
        </section>
    </section>
</section>

